<style>
    i.fas {

  cursor: pointer;
  user-select: none;
}

.fas:hover {
  color: rgb(85, 34, 157);
}
.fas:focus {
  color: rgb(16, 4, 33);
}
</style>
<script>
    function copyToClipboard(element) {
      var $temp = $("<input>");
      $("body").append($temp);
      $temp.val($(element).text()).select();
      document.execCommand("copy");
      $temp.remove();
        document.getElementById("myP").style.display = "block";


     
    }

    
  </script>
