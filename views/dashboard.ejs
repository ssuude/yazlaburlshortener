    <div class="content-page">
        <!-- Start content -->
        <div class="content">
            <div class="container-fluid">
                <div class="page-title-box">
                    <div class="row align-items-center">
                        <div class="col-sm-6">
                            <!--<h4 class="page-title">Url Shortner</h4>-->
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-right">
                                <li class="breadcrumb-item" style="font-size: medium;"><a href="javascript:void(0);"><b>HOŞGELDİN,  <%= user.name %> </b> </a></li>
                            </ol>
                        </div>
                    </div> <!-- end row -->
                </div>
                <!-- end page-title -->

                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-30">
                            <div class="card-body">

                                <h2 style="color:#e83e8c" class="mt-0 header-title">Url Kısaltıcı</h2>
                                <h5 class="sub-title">Tek tık ile  uzun url linkinizi <code
                                        class="highlighter-rouge">kısaltın</code> </code>.</h5>
                                
                                <!-- start form -->
                                <form action="/dashboard" method="post">
                                    <!--Start Message Display-->
                                    <% if(created) { %> 
                                        <%var index=0; %> 
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                            Kısa URL'iniz: <a  id="p<%= index%>" href="<%= created %>" class="alert-link"><%= created %> </a>.
                                            <a style="display:inline-block;" onclick="copyToClipboard('#p<%= index %>');" class="btn btn-lg-square mx-2"><i style="display:inline-block;font-size: 30px;"class="fas fa-clipboard"></i></a>
                                            <span style="display:inline-block;"><p id="myP" style="display: none;position:relative">Kopyalandı!</p></span> 
                                        
                                        </div>
                                    <% } %>
                                    <% if(error) { %>
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">×</span>
                                            </button>
                                            <%= error %> 
                                        </div>
                                    <% } %>
                                    <!--End Message Display-->
                                    <div class="form-group row">
                                        <label for="url" class="col-sm-2 col-form-label">Uzun Url</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" name="url" id="url" placeholder="Uzun link giriniz" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="slug" class="col-sm-2 col-form-label">Kısaltılmış Ad</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" name="slug" id="slug" placeholder="Kısa adı giriniz">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="slug" class="col-sm-2 col-form-label">Geçerlilik Süresi</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" name="validFor" id="validFor" placeholder="Link bu gün sayısı ile geçerli kalacaktır">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-10">
                                            <input class="form-control" type="hidden" name="userid" id="userid" value="<%= user.id %>">
                                        </div>
                                    </div>
                                    <button type="submit" value="submit" class="btn btn-warning waves-effect waves-light">KISALT!</button>
                                </form><!-- end form-->
                            </div>
                            
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row --> 
                
                
                
            
            <!-- container-fluid -->
        </div>
        <!-- content -->

        

    </div>
