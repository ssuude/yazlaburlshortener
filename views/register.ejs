<!-- Begin page -->
<div class="accountbg"></div>
<div class="home-btn d-none d-sm-block">
        <a href="/" class="text-white"><i class="fas fa-home h2"></i></a>
    </div>
<div class="wrapper-page">
  <div class="card card-pages shadow-none">

      <div class="card-body">
          <h5 class="font-18 text-center">Üye Ol</h5>

          <%- include ("./partials/messages") %>
          
          <form class="form-horizontal m-t-30" action="/users/register" method="POST">

                  <div class="form-group">
                          <div class="col-12">
                                  <label>İsim</label>
                              <input class="form-control" type="text" name="name" id="name" required placeholder="İsim Girin">
                          </div>
                      </div>

              <div class="form-group">
                  <div class="col-12">
                          <label>Email</label>
                      <input class="form-control" type="text" id="email" name="email" required placeholder="Email Girin">
                  </div>
              </div>

              <div class="form-group">
                  <div class="col-12">
                          <label>Şifre</label>
                      <input class="form-control" type="password" name="password" id="password" required placeholder="Şifre Girin">
                  </div>
              </div>
              <div class="form-group">
                <div class="col-12">
                        <label>Şifreyi Onayla</label>
                    <input class="form-control" type="password" id="password2" name="password2" required placeholder="Şifreyi Onayla">
                </div>
              </div>

              <div class="form-group text-center m-t-20">
                  <div class="col-12">
                      <button class="btn btn-primary btn-block btn-lg waves-effect waves-light" type="submit">Kayıt Ol</button>
                  </div>
              </div>

              <div class="form-group mb-0 row">
                      <div class="col-12 m-t-10 text-center">
                          <a href="/users/login" class="text-muted">Zaten bir hesabınız var mı?</a>
                      </div>
                  </div>
          </form>
      </div>

  </div>
</div>
<!-- END wrapper -->